---
export interface Props {
  number: string;
  arabic: string;
  translation: string;
  tafsir?: string;
  surahNumber?: string;
}

const { number, arabic, translation, tafsir, surahNumber = "1" } = Astro.props;
---

<article
  class="bg-card border border-border rounded-lg p-6 space-y-4"
  id={`ayah-${number}`}
>
  <div class="flex items-center justify-between">
    <div
      class="w-8 h-8 bg-primary/10 border border-primary/20 rounded-full flex items-center justify-center"
    >
      <span class="text-sm font-semibold text-primary">{number}</span>
    </div>
  </div>

  <div class="space-y-4">
    <div class="text-right" dir="rtl">
      <p class="text-2xl leading-loose font-arabic text-foreground">{arabic}</p>
    </div>

    <div class="border-t border-border pt-4">
      <p class="text-muted-foreground leading-relaxed">{translation}</p>
    </div>

    {
      tafsir && (
        <details class="group">
          <summary class="cursor-pointer text-sm font-medium text-primary hover:text-primary/80 transition-colors">
            Lihat Tafsir
          </summary>
          <div class="mt-3 p-4 bg-muted/50 rounded-lg">
            <p class="text-sm text-muted-foreground leading-relaxed">
              {tafsir}
            </p>
          </div>
        </details>
      )
    }
  </div>
</article>
