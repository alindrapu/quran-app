---
import { Button } from "../ui/button";
import { Card, CardContent, CardTitle } from "../ui/card";

const { name } = Astro.props;
---

<Card
  as="article"
  className="group cursor-pointer bg-card hover:bg-accent/50 border border-border rounded-lg p-6 transition-all duration-200 hover:shadow-md"
  id={`hadith-${name}`}
>
  <CardContent className="text-center">
    <CardTitle
      as="h3"
      className="text-xl font-bold text-foreground group-hover:text-primary transition-colors mb-2 capitalize"
    >
      {name.replaceAll("-", " ")}
    </CardTitle>
    <Button
      variant="link"
      size="lg"
      className="text-2xl font-amiri text-foreground mb-3"
      dir="rtl"
    >
      <a
        class="inline-block text-emerald-600 hover:text-emerald-700"
        href={`/hadith/${name}`}
      >
        Lihat Hadith
      </a>
    </Button>
  </CardContent>
</Card>
